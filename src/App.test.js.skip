import { test, expect } from '@jest/globals';
import { render, screen } from '@testing-library/react';
// Removed BrowserRouter import as we won't render the full App with routing
// import { BrowserRouter } from 'react-router-dom';
import App from './App';

test('App component renders without crashing (basic check)', () => {
  // Render the App component directly. Expect router context warnings.
  const { container } = render(<App />); // Get container

  // Find the outer div with class "App"
  const appDiv = container.querySelector('.App');

  // Basic check: does the container element exist?
  expect(appDiv).toBeInTheDocument();
});

